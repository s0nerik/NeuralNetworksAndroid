<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sonerik.neuralnetworksandroid.fragments.TableFragment">

    <ImageView
        android:id="@+id/load_input_icon"
        android:src="@drawable/ic_file_find"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/load_input_text"
        android:text="Load input from file"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:layout_below="@+id/load_input_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
